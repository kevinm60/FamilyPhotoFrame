<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:keepScreenOn="true"
   android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/frameA"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/photoA"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/captionA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/OverlayText" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameB"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ImageView
            android:id="@+id/photoB"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/captionB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/OverlayText" />
    </FrameLayout>
</FrameLayout>
